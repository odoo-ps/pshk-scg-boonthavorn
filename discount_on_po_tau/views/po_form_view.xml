<odoo>
    <data>
        <record id="purchase_order_form_cutomization_tau" model="ir.ui.view">
            <field name="name">purchase.order.form.cutomization.tau</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="x_po_percent_discount"/>
                </xpath>
                <xpath expr="//page[@name='products']//field[@name='price_unit']" position="after">
                    <field name="x_line_percent_discount" string="Disc.%" widget="product_discount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
