<odoo>
    <data>
        <record id="purchase_order_context" model="ir.ui.view">
            <field name="name">purchase.order.context</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'res_partner_search_mode': 'supplier', 'show_vat': True, 'from_purchase': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
