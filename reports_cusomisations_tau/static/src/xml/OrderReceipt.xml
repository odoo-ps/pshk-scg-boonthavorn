<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='receipt.company.vat']" position="after">
            <t t-if="receipt.x_pos_id">
                <div>POS ID:<t t-esc="receipt.x_pos_id"/></div>
            </t>
        </xpath>

        <xpath expr="//div[@class='orderlines']" position="before">
            <t t-if="receipt.x_real_sequence_number">
                <div><t t-esc="receipt.x_real_sequence_number"/></div>
            </t>
        </xpath>

        <xpath expr="//div[@class='pos-receipt-order-data']" position="after">
            <t t-if="receipt.x_payment_term">
                <div style="text-align: center;"><t t-esc="receipt.x_payment_term"/></div>
            </t>
        </xpath>

        <xpath expr="//div[@class='pos-receipt-amount']" position="after">
            <div class="pos-receipt-amount">
                GRAND TOTAL IN KHR
                <t t-if="receipt.x_khr_currency">
                    <span t-esc="receipt.x_khr_currency" class="pos-receipt-right-align"/>
                </t>
            </div>
        </xpath>
    </t>
</templates>
