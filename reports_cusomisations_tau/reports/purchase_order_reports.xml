<odoo>
    <data>
        <template id="report_purchasequotation_document_inherit" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//h2" position="after">
                <div id="informations" class="row mt32 mb32">
                    <div t-if="o.date_order" class="col-3 bm-2">
                        <strong>Order Date:</strong>
                        <p t-field="o.date_order" class="m-0"/>
                    </div>
                    <div class="col-9 bm-2"/>
                </div>
            </xpath>

            <xpath expr="//th[@name='th_description']" position="before">
                <th name="items"><strong>Item</strong></th>
            </xpath>

            <xpath expr="//t[@t-foreach='o.order_line']" position="before">
                <t t-set="item_no" t-value="1"/>
            </xpath>

            <td id="product" position="before">
                <td id="item_no">
                    <span t-esc="item_no"/>
                    <t t-set="item_no" t-value="item_no+1"/>
                </td>
            </td>

            <xpath expr="//p[@t-field='o.notes']" position="after">
                <div class="row">
                    <div class="offset-4 col-4 text-right">
                        <strong>PO Representative: </strong><span t-field="o.user_id"/><br/>
                        <strong>Date: </strong><span t-field="o.date_approve" t-options="{'widget': 'date'}"/>
                    </div>
                    <div class="col-4 text-right">
                        <strong>Approver: </strong><span t-field="o.x_po_approver"/><br/>
                        <strong>Date: </strong><span t-field="o.x_last_lock_date" t-options="{'widget': 'date'}"/>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//th[@name='th_description']" position="before">
                <th name="items"><strong>Item</strong></th>
            </xpath>

            <xpath expr="//t[@t-foreach='o.order_line']" position="before">
                <t t-set="item_no" t-value="1"/>
            </xpath>

            <td id="product" position="before">
                <td id="item_no">
                    <span t-esc="item_no"/>
                    <t t-set="item_no" t-value="item_no+1"/>
                </td>
            </td>

            <xpath expr="//p[@t-field='o.notes']" position="after">
                <div class="row">
                    <div class="offset-4 col-4 text-right">
                        <strong>PO Representative: </strong><span t-field="o.user_id"/><br/>
                        <strong>Date: </strong><span t-field="o.date_approve" t-options="{'widget': 'date'}"/>
                    </div>
                    <div class="col-4 text-right">
                        <strong>Approver: </strong><span t-field="o.x_po_approver"/><br/>
                        <strong>Date: </strong><span t-field="o.x_last_lock_date" t-options="{'widget': 'date'}"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
